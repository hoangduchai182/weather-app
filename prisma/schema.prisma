generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SearchHistory {
  id         Int      @id @default(autoincrement())
  city       String
  searchedAt DateTime @default(now())

  @@index([searchedAt])
}

model Favorites {
  id      Int      @id @default(autoincrement())
  city    String   @unique
  notes   String?
  addedAt DateTime @default(now())

  @@index([city])
}
